{
  "review": {
    "maxDaysBack": 30,
    "prStates": ["open"],
    "excludeLabels": ["wip", "draft", "do-not-review"],
    "maxFilesPerPR": 50,
    "maxLinesPerFile": 1000,
    "minCoveragePercent": 80,
    "parallelReviews": {
      "enabled": true,
      "temperatures": [0, 0.3]
    }
  },
  "platforms": {
    "gitlab": {
      "enabled": false,
      "url": "${GITLAB_API_URL}",
      "token": "${GITLAB_PERSONAL_ACCESS_TOKEN}",
      "projectId": "${GITLAB_PROJECT_ID}"
    },
    "github": {
      "enabled": true,
      "token": "${GITHUB_PERSONAL_ACCESS_TOKEN}",
      "repositories": ["aheumaier/codereview-agent"]
    },
    "bitbucket": {
      "enabled": false,
      "username": "${BITBUCKET_USERNAME}",
      "appPassword": "${BITBUCKET_APP_PASSWORD}"
    }
  },
  "claude": {
    "apiKey": "${CLAUDE_API_KEY}",
    "model": "claude-sonnet-4-5-20250929",
    "tier": 1,
    "maxTokens": 8192,
    "temperature": 0,
    "rateLimiting": {
      "enabled": true,
      "clientSideThrottling": true,
      "perPRBudget": 100000,
      "retry": {
        "maxRetries": 5,
        "baseDelay": 1000,
        "maxDelay": 60000,
        "jitterPercent": 0.1
      }
    }
  },
  "output": {
    "dryRun": "${DRY_RUN}",
    "postComments": true,
    "postSummary": true,
    "approveIfNoIssues": false
  },
  "tracking": {
    "dbPath": "./data/reviews.db",
    "ttlDays": 30
  },
  "features": {
    "useStateManagement": true,
    "useSubAgents": true
  }
}